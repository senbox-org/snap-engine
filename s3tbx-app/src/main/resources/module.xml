<module>
    <manifestVersion>1.0.0</manifestVersion>
    <symbolicName>s3tbx-app</symbolicName>
    <version>0.5</version>
    <name>S-3 Toolbox Application</name>

    <vendor>Brockmann Consult GmbH</vendor>
    <contactAddress>Max-Planck-Str. 2, 21502 Geesthacht (Germany)</contactAddress>
    <copyright>(c) Copyright 2002-2014 by Brockmann Consult and contributors.&lt;br/&gt;All rights reserved.</copyright>
    <url>http://envisat.esa.int/beam</url>

    <description>Sentinel-3 Toolbox Display and Analysis Tool</description>

    <licenseUrl>http://www.gnu.org/licenses/gpl.html</licenseUrl>
    <funding>European Space Agency</funding>

    <dependency>
        <module>snap-visat-rcp</module>
    </dependency>
    <dependency>
        <module>snap-core</module>
    </dependency>

    <categories>Application</categories>

    <extension point="snap-ceres-core:applications">
        <application id="S3tbxMain" class="org.esa.s3tbx.S3tbxMain"/>
    </extension>

    <extension point="snap-ui:applicationDescriptors">
        <applicationDescriptor>
            <applicationId>S3tbxMain</applicationId>
            <displayName>ESA S-3 Toolbox</displayName>
            <version>${s3tbx.version}</version>
            <buildId>${s3tbx.build.id}</buildId>
            <buildDate>${s3tbx.build.date}</buildDate>

            <frameIcons>
                /org/esa/s3tbx/images/s3tbx-icon-16.png,
                /org/esa/s3tbx/images/s3tbx-icon-32.png,
                /org/esa/s3tbx/images/s3tbx-icon-48.png,
                /org/esa/s3tbx/images/s3tbx-icon-64.png,
                /org/esa/s3tbx/images/s3tbx-icon-96.png,
                /org/esa/s3tbx/images/s3tbx-icon-128.png
            </frameIcons>
            <aboutImage>
                /org/esa/s3tbx/images/s3tbx-about.png
            </aboutImage>

            <excludedActions>
            </excludedActions>

            <excludedToolViews>
            </excludedToolViews>


        </applicationDescriptor>
    </extension>


    <extension point="snap-ui:layerSources">

    </extension>

    <extension point="snap-ui:layerEditors">

    </extension>

    <extension point="snap-ui:toolViews">


    </extension>

    <extension point="snap-ui:actions">

        <action>
            <parent>help</parent>
            <placeBefore>showDataSources</placeBefore>
            <id>org.esa.s3tbx.ContextSearchAction</id>
            <class>org.esa.s3tbx.ContextSearchAction</class>
            <text>Web Search...</text>
            <shortDescr>Perform a contextual web search on the selected node.</shortDescr>
            <context>product,metadataNode,tiePointGrid,virtualBand,band</context>
            <helpId>contextSearch</helpId>
        </action>

    </extension>

    <extension point="snap-ui:helpSets">
        <helpSet>
            <parent>snap-beam-help</parent>
            <id>Help</id>
            <path>doc/help/dat.hs</path>
        </helpSet>
    </extension>

</module>
